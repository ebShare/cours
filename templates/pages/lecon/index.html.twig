{% extends 'base.html.twig' %}

{% block title %}Cours - Lecon{% endblock %}

{% block body %}

<div class="container mt-4">
    <h1>Mes lecons</h1>
    {% if not lecons.items is same as([]) %}
        <h4>{{ lecons.getTotalItemCount }} lecons</h4>

        <table class="table table-hover mt-4">
            <thread>
            <tr class="table-secondary">
                <th scope="col">Code</th>
                <th scope="col">Titre</th>
                <th scope="col">Heures</th>
            </tr>
            </thread>
            <tbody>
            {% for lecon in lecons %}
                <tr class="table-secondary">
                    <th scope="row">{{ lecon.code }}</th>
                    <td>{{ lecon.code }}</td>
                    <td>{{ lecon.titre }}</td>
                    <td>{{ lecon.heures }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(lecons) }}
        </div>
    {% else %}
    <h4>Il n'y a aucune lecon !</h4>
    {% endif %}

</div>
{% endblock %}
